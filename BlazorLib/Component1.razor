@using Microsoft.JSInterop;

@inject IJSRuntime jsRuntime;

<div class="my-component">
    This Blazor component is defined in the <strong>BlazorLib</strong> package.
</div>
<button class="btn btn-primary" onclick="@CallExampleJsInterop">Click me to use JS Interop!</button>

<p>Message from JS: @jsMessage</p>

@functions {

    string jsMessage = string.Empty;

    async Task CallExampleJsInterop()
    {
        jsMessage = await ExampleJsInterop.Prompt(jsRuntime, "Message from .Net!");
    }

}
